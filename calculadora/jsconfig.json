{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"baseUrl": ".",
		"paths": {
			"@pages": [
				"src/react/pages"
			],
			"@pages/*": [
				"src/react/pages/*"
			],
			"@containers": [
				"src/react/containers"
			],
			"@containers/*": [
				"src/react/containers/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"src/**/*.js",
		"src/**/*.jsx"
	]
}